{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015"],
    "baseUrl": "<%= sourceRoot %>",
    "paths": {
      "containers/*": ["containers/*"],
      "middlewares/*": ["middlewares/*"],
      "utils/*": ["utils/*"],
      "store/*": ["store/*"],
      "config/*": ["config/*"]
    }
  },
  "exclude": ["./**/*.test.tsx?", "node_modules"]
}
